
<%= form_with model: document, class: 'edit_form' do |form| %>
  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Поле</th>
          <th>Значение</th>
        </tr>
      </thead>
      <tbody>
        <% Document.all_fields.each do |field| %>
          <tr>
            <td><%= t "model.document.#{field}" %></td>
            <td>
              <% if Document.dates.include?(field) %>
                <%= form.date_field field, value: document.last_values[field] %>
              <% elsif Document.texts.include?(field) %>
                <%= form.text_area field, value: document.last_values[field] %>
              <% elsif Document.enums.include?(field) %>
                <%= form.select field, options_for_select(Document.send("#{field}_for_select"),
                  document.last_values[field]), include_blank: true %>
              <% else %>
                <%= form.text_field field, value:document.last_values[field] %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
