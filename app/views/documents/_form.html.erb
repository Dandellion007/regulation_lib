
<%= form_with(model: document) do |form| %>
  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Поле</th>
          <th>Значение</th>
        </tr>
      </thead>
      <tbody>
        <% Document.all.each do |attr| %>
          <tr>
            <td><%= t "model.document.#{attr}" %></td>
            <td><%= form.text_field attr %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
