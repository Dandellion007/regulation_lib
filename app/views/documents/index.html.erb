<p style="color: green"><%= notice %></p>

<% content_for :sub_title do %>
  Документы
<% end %>


<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>№</th>
        <th>Обозначение</th>
        <th>Код ОКС</th>
        <th>Наименование</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @documents.each_with_index do |document, i| %>
        <tr>
          <th class="number"><%= i + 1 %></th>
          <td>Обозначение</td>
          <td>Код ОКС</td>
          <td>Наименование</td>
          <td><%= button_to "", document, method: :get, class: "show_document_btn" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
