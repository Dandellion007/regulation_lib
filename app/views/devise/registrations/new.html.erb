<div class="jumbotron">
  <h3>Регистрация</h3>
</div>

<div class="container align-items-center">
  <div style="margin-left: 60px">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group row mb-3 mt-3">
        <label class="col-sm-3 col-form-label">Email</label>
        <div class="col-sm-7">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
      </div>

      <div class="form-group row mb-3">
        <label class="col-sm-3 col-form-label">Пароль</label>
        <div class="col-sm-7">
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: 'не менее 6 символов' %>
        </div>
      </div>

      <div class="form-group row mb-3">
        <label class="col-sm-3 col-form-label">Подтвердите пароль</label>
        <div class="col-sm-7">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: 'не менее 6 символов' %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit 'Зарегестрироваться', class: 'btn btn-primary btn-block mb-3' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
