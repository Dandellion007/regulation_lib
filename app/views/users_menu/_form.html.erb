
<%= form_with model: user, url: users_menu_path(user), class: 'edit_form', id: 'user_form_edit'  do |form| %>
  <%= render "devise/shared/error_messages", resource: user %>

  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Поле</th>
          <th>Значение</th>
        </tr>
      </thead>

      <tbody>
          <tr>
            <td>ФИО пользователя</td>
            <td><%= form.text_field :full_name, value:user.full_name, class: 'form-control' %></td>
          </tr>
          <tr>
            <td>Название организации</td>
            <td><%= form.text_field :company, value:user.company, class: 'form-control' %></td>
          </tr>
          <tr>
            <td>Отделение организации</td>
            <td><%= form.text_field :company_department, value:user.company_department, class: 'form-control' %></td>
          </tr>
          <tr>
            <td>Деятельность организации</td>
            <td><%= form.text_field :company_activity, value:user.company_activity, class: 'form-control' %></td>
          </tr>
      </tbody>
    </table>
  </div>
  
  <div class='user_role_checkbox'>
    <%= form.check_box :is_admin, value:user.is_admin %>
    <%= form.label :is_admin, "Пользователь является администратором" %>
  </div>

  <div >
    <%= form.submit 'Сохранить', class: 'btn btn-primary btn-sm' %>
    <%= link_to 'Отменить', users_menu_index_path, class: 'btn btn-secondary btn-sm' %>
  </div>
<% end %>
